namespace foundry {
namespace parse {

node root {
        rule rules[];
};

node rule {
        std::string name;
        bool is_start;
        alternative alternatives[];
};

node alternative {
        component components[];
};

group component {
        node {
                std::string name;
        };

        node string_literal
        {
                std::string text;
        };

        node unresolved_symbol {};

        node terminal {};
        node nonterminal
        {
                rule rule;
        };
};

const visitor;
visitor;

}
}
